{
  "name": "@foxify/config",
  "version": "1.0.0",
  "description": "Foxify Configuration",
  "homepage": "https://github.com/foxifyjs/config#readme",
  "author": "Ardalan Amini <ardalanamini22@gmail.com> (https://ardalanamini.com/)",
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/foxify"
    }
  ],
  "license": "MIT",
  "repository": "github:foxifyjs/config",
  "bugs": {
    "url": "https://github.com/foxifyjs/config/issues"
  },
  "keywords": [
    "node.js",
    "foxify",
    "framework",
    "config"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "pnpm build --watch",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:hybrid": "scripts/pre-build.sh && pnpm build && pnpm build:esm && scripts/post-build.sh",
    "lint": "eslint src __tests__",
    "lint:fix": "pnpm lint -- --fix",
    "test": "node --no-compilation-cache --expose-gc node_modules/jest/bin/jest --logHeapUsage",
    "test:coverage": "pnpm test -- --coverage",
    "test:ci": "pnpm test:coverage -- --ci --verbose --no-cache"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "main": ".build/cjs/index.js",
  "module": ".build/esm/index.js",
  "types": ".build/types/index.d.ts",
  "imports": {
    "#src/config": {
      "import": "./.build/esm/config-esm.js",
      "default": "./.build/cjs/config-cjs.js"
    },
    "#src/*": {
      "import": "./.build/esm/*.js",
      "default": "./.build/cjs/*.js"
    }
  },
  "exports": {
    ".": {
      "import": "./.build/esm/index.js",
      "default": "./.build/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@types/node": "^18.11.7",
    "joi": "^17.6.4"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.26.0",
    "jest": "^29.2.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
